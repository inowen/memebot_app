<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.MainMenu"
    android:background="@drawable/main_screen_bg"
    >

    <Button
        android:id="@+id/send_memes_btn"
        android:layout_width="301dp"
        android:layout_height="68dp"
        android:layout_marginStart="56dp"
        android:text="SEND MEMES"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="75dp" />

    <Button
        android:id="@+id/suggestions_btn"
        android:layout_width="303dp"
        android:layout_height="61dp"
        android:layout_marginTop="4dp"
        android:text="Suggestions"
        app:layout_constraintStart_toStartOf="@+id/send_memes_btn"
        app:layout_constraintTop_toBottomOf="@+id/send_memes_btn" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="91dp"
        android:layout_height="78dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:text="Settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <Button
        android:id="@+id/testButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="36dp"
        android:text="testing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/quick_request_btn"
        android:layout_width="303dp"
        android:layout_height="62dp"
        android:layout_marginTop="4dp"
        android:text="Quick Request"
        app:layout_constraintStart_toStartOf="@+id/suggestions_btn"
        app:layout_constraintTop_toBottomOf="@+id/suggestions_btn" />

    <Button
        android:id="@+id/favorites_btn"
        android:layout_width="306dp"
        android:layout_height="67dp"
        android:layout_marginTop="8dp"
        android:text="favorites"
        app:layout_constraintStart_toStartOf="@+id/quick_request_btn"
        app:layout_constraintTop_toBottomOf="@+id/quick_request_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>