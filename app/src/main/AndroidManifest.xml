<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.inowen.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utils.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".gui.ImageScrollActivity"></activity>
        <activity android:name=".testing.TestingActivity" />
        <activity android:name=".gui.SettingsActivity" />
        <activity
            android:name=".gui.SuggestionsActivity"
            android:label="@string/title_activity_suggestions"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".gui.MainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>